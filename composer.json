{
    "name": "kora/grid-symfony",
    "type": "library",
    "description": "Grid using symfony components",
    "license": "MIT",
    "authors": [
        {
            "name": "Pawel Gierlasinski",
            "email": "pawel@mediamonks.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kora\\Grid\\Symfony\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/gierlas/grid"
        },
        {
            "type": "vcs",
            "url": "https://github.com/gierlas/data-provider"
        }
    ],
    "require": {
        "php": "^7.0",
        "kora/data-provider": "dev-master",
        "kora/grid": "dev-master",
        "symfony/form": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "mockery/mockery": "^1.0",
        "twig/twig": "^2.4",
        "symfony/dependency-injection": "^3.3"
    },
    "suggest": {
        "twig/twig": "If you'd like to use twig column renderer",
        "symfony/dependency-injection": "If you want to use compiler passes"
    }
}
